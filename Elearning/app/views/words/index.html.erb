<% provide(:title, 'All words') %>
<h1>All words</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%#= form_tag('/words', :method => :get) do %>
    <%#= text_field_tag "username" %>
    <%#= submit_tag "Submit", :html => {:id => "abc"} %>
    <%# end %>
    <form action="/words" method="get">
    	<select name="category">
    		<% Category.all.each do |category| %>
    			<option value="<%= category.id %>"><%= category.title %></option>
    		<% end %>
    	</select>
    	<input type="radio" name="learn" value="learned"> Learned
    	<input type="radio" name="learn" value="notlearned"> Not learned
    	<input type="radio" name="learn" value="all"> All
    	<input type="submit" value="Filter">
    </form>
  </div>
</div>

<% temp = 1 %>
<ul class="categories" style="list-style-type: none">
  <% if @words %>
  	<% @words.each do |word| %>
	    <li>
	      <div>
	      	<%#= gravatar_for category, size: 50 %>
		      <%#= link_to category.name, category %>
		      <p><%= temp %>. <%= word.en %> : <%= word.vi %></p>
	      </div>
	    </li>
	    <% temp = temp + 1 %>
	  <% end %>
  <% end %>
</ul>