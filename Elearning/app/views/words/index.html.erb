<% provide(:title, 'All words') %>
<h1>All words</h1>

<ul class="categories" style="list-style-type: none">
  <% @words.each do |word| %>
    <li>
      <div>
      	<%#= gravatar_for category, size: 50 %>
	      <%#= link_to category.name, category %>
	      <p><%= word.en %> : <%= word.vi %></p>
      </div>
    </li>
  <% end %>
</ul>