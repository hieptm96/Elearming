<script type="text/javascript">
  $(document).ready(function(){
    $(".ans").click(function(){
      //Them :checked de khi chon bat ki mot dap an trong mot cau chi tinh la 1 lan click => tien trinh lesson
      var a = $(".ans:checked").length;
      $("#process").text(a);
    });
  });
</script>

<ul class="categories" style="list-style-type: none">
  <% temp = 1 %>
  <h2><%= Category.find(params[:id]).title %> <span style="color: green"><span id="process">0</span>/20</span></h2>
  <form action="/categories/<%= params[:id] %>/check" method="post">
    <% @words.each do |word| %>
      <li>
        <div>
          <%#= gravatar_for category, size: 50 %>
          <%#= link_to category.name, category %>        
          <p><%= temp %>. <%= word.en %> ?</p>
          <input type="radio" name="<%= temp %>" value="<%= word.ans_a %>" class="ans"> <%= word.ans_a %><br>
          <input type="radio" name="<%= temp %>" value="<%= word.ans_b %>" class="ans"> <%= word.ans_b %><br>
          <input type="radio" name="<%= temp %>" value="<%= word.ans_c %>" class="ans"> <%= word.ans_c %><br>
          <input type="radio" name="<%= temp %>" value="<%= word.ans_d %>" class="ans"> <%= word.ans_d %><br>
          <% temp = temp + 1 %>
        </div>
      </li>
    <% end %>
    <input type="submit" value="Check">
  </form>
</ul>
<button type="button" class="btn btn-success btn-lg"><%= link_to "Back", categories_path %></button>